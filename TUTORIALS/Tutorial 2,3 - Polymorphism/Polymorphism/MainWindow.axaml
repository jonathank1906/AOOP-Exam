<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="480"
        Width="640" Height="480"
        x:Class="Polymorphism.Polymorphism.MainWindow"
        Title="Polymorphism">
        <StackPanel>
                <Border
                        Margin="10"
                        Background="LightBlue">
                        
                        <TextBlock TextAlignment="Center" Margin="10" FontSize="26">Polymorphism</TextBlock>
                </Border>
                <Grid ColumnDefinitions="120 80 80" RowDefinitions="Auto Auto Auto Auto Auto" >
                        <RadioButton Grid.Column="0" Grid.Row="0" Margin="10 5" Name="RadioEllipse" Content="" Click="RadioButtonHandler"  IsChecked="True"/>
                        <RadioButton Grid.Column="0" Grid.Row="1" Margin="10 5" Name="RadioRectangle" Content="Rectangle" Click="RadioButtonHandler" />
                        <RadioButton Grid.Column="0" Grid.Row="2" Margin="10 5" Name="RadioCircle" Content="Circle" Click="RadioButtonHandler" />
                        <RadioButton Grid.Column="0" Grid.Row="3" Margin="10 5" Name="RadioSquare" Content="Square" Click="RadioButtonHandler"/> 
                        
                        <TextBox Grid.Row="0" Grid.Column="1" Margin="5 5" Name="Parameter1" FontSize="15"></TextBox>
                        <TextBox Grid.Row="0" Grid.Column="2" Margin="5 5" Name="Parameter2" FontSize="15"></TextBox>
                        <Button Grid.Row="1" Grid.Column="2"  Margin=" 5 0" Click="ButtonHandler">Get Info</Button>
                        
                </Grid>
                        <TextBlock Margin="20" xml:space="preserve" Name="TextBlock" FontSize="16"></TextBlock>
        </StackPanel>
</Window>
